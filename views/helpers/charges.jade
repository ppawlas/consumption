extends ../layout

block content
	h1= title

	form(method='POST', action='electricityCharges/' + encodeURIComponent(electricityCharge._id))
		- labels.forEach(function(label) {
			p
				label(for=label)= label 
				<br />
				input(id=label, name=label, value=electricityCharge[label])
		-	});

		p
			label(for='appliesFrom') Applies from:
			<br />
			input(id='appliesFrom', name='appliesFrom', value=electricityCharge['appliesFrom'])		

		p
			input(type='submit', value='Save')
			input(name='_method', type='hidden', value='PUT')