extends ../layout

block content
	div(class='page-header')
		h1= title

	div(class='row')
		div(class='col-xs-5 col-lg-5')
			table(class='table table-striped table-condensed')
				thead
					- labels.forEach(function(label) {
						th= __(label)
					- });
					th= __('Applies from')
					th &nbsp
				- electricityCharges.forEach(function(electricityCharge) {													
					- labels.forEach(function(label) {
						td= round(electricityCharge[label])
					- });
					td= electricityCharge['appliesFrom']
					td
						form(action=controllerPath + '/' + encodeURIComponent(electricityCharge._id), method='GET')
							- if(electricityCharge['appliesFrom'])
								button(type='submit', class='btn btn-primary', disabled) Edit
							- else
								button(type='submit', class='btn btn-primary')= __('Edit')
				- });
				tr
					- labels.forEach(function(label) {
						td &nbsp
					- });
					td &nbsp
					td
						form(action=controllerPath + '/new', method='GET')
							button(type='submit', class='btn btn-default')= __('New')