extends ../layout

block content
	div(class='page-header')
		h1= title
	

	h3= __('Backup directory')
	h4= dir

	hr

	h3= __('Dump database')
	div
		form(class='form-inline', role='form', method='POST', action='/admin/dump', enctype='multipart/form-data')
			button(type='submit', class='btn btn-default')= __('Dump')

	hr

	h3= __('Restore database')
	div
		form(class='form-inline', role='form', method='POST', action='/admin/restore', enctype='multipart/form-data')
			button(type='submit', class='btn btn-default')= __('Restore')