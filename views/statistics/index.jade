extends ../layout

block content

	div(class='page-header')
		h1= title

	include ../common/links

	div(class='row')
		div(class='col-xs-5 col-lg-5')
			table(class='table table-striped table-condensed')
				thead
					tr
						th= __('Period')
						th= __('Gas / Day')
						th= __('Electricity / Day')
						th= __('Water / Week')
				- periods.forEach(function(period) {
					tr
						td= formatPeriod(period)
						td= round(data[period].gas)
						td= round(data[period].electricity)
						td= round(data[period].water)
				- });