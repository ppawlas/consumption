extends ../layout

block content
	div(class='page-header')
		h1= title

	- var actionPath = reading ? '/' + encodeURIComponent(reading._id) : '';

	div
		form(role='form', method='POST', action=controllerPath + actionPath)
			include inputs

			button(type='submit', class='btn btn-default')= __('Save')

			- if (reading) {
				input(name='_method', type='hidden', value='PUT')
			-	}