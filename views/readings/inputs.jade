div(class='row')
	div(class='form-group col-xs-5 col-lg-2')
		label(for='date') Date
		input(type='date', class='form-control', id='date', name='date' value=reading ? dateString(reading['date']) : today())

div(class='row')			
	div(class='form-group col-xs-5 col-lg-2')
		label(for='state') State
		input(type='text', class='form-control', id='state', name='state' value=reading && reading['state'])

div(class='checkbox')
	label Fixed
		input(type='checkbox', id='fixed', name='fixed' checked=reading && reading['fixed'])

div(class='row')		
	div(class='form-group col-xs-5 col-lg-2')
		label(for='usage') Usage
		input(type='text', class='form-control', id='usage', name='usage' disabled=! reading || ! reading['fixed'] value=reading && reading['usage'])

div(class='row')
	- if (controllerPath === '/gasInvoices') {
		div(class='form-group col-xs-5 col-lg-2')
			label(for='charge') Charge
			input(type='text', class='form-control', id='charge', name='charge' value=reading && reading['charge'])
	-	}